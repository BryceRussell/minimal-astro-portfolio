---
import Button from "./button";
import "../styles/global.scss";
import styles from "../styles/comp-styles/errorLable.module.scss";
---

<div class={"Section"}>
  <div class={styles.Content_Container}>
    <h1 class={styles.Title}>404</h1>
    <h3 class={styles.Subtitle}>Oops, Page Not Found</h3>
    <p class={styles.Text}>
      But if you don't change your direction, and if you keep looking, you may
      end up where you are heading.
    </p>
    <div class={styles.CallToActionBox}>
      <a href={"/"}>
        <button class={styles.View_Button}>Home</button>
      </a>
      <Button client:load />
    </div>
  </div>
</div>
